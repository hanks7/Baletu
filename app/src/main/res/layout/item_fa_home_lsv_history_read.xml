<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="6dp"
    android:paddingTop="12dp">


    <ImageView
        android:id="@+id/item_upmarqueeview_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_text_rewen" />


    <TextView
        android:id="@+id/item_item_upmarqueeview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_upmarqueeview_button"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Button" />

    <ImageView
        android:id="@+id/item_upmarqueeview_button3"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_next_right"
        android:text="Button" />
</RelativeLayout>
