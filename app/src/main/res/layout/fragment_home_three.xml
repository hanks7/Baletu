<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.module.home.HomeThreeFragment">

    <com.hopeshine.taoxue.ui.view.HeadZoomScrollView
        android:id="@+id/fa_home_fg_shunfeng_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_home_page_bg" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="-110dp"
                    android:background="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">

                        <TableRow>

                            <ImageView
                                style="@style/style_icon_table_layout"
                                android:src="@mipmap/icon_zhengzu" />

                            <ImageView
                                style="@style/style_icon_table_layout"
                                android:src="@mipmap/icon_zhengzu" />

                            <ImageView
                                style="@style/style_icon_table_layout"
                                android:src="@mipmap/icon_zhengzu"
                                />

                            <ImageView
                                style="@style/style_icon_table_layout"
                                android:src="@mipmap/icon_zhengzu" />
                        </TableRow>

                        <TableRow>

                            <ImageView
                                style="@style/style_icon_table_layout"
                                android:src="@mipmap/icon_zhengzu" />

                            <ImageView
                                style="@style/style_icon_table_layout"
                                android:src="@mipmap/icon_zhengzu" />

                            <ImageView
                                style="@style/style_icon_table_layout"
                                android:src="@mipmap/icon_zhengzu" />

                            <ImageView
                                style="@style/style_icon_table_layout"
                                android:src="@mipmap/icon_zhengzu" />
                        </TableRow>
                    </TableLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginTop="20dp"
                android:background="@color/white" />


        </LinearLayout>
    </com.hopeshine.taoxue.ui.view.HeadZoomScrollView>

    <com.hopeshine.taoxue.ui.view.TranslucentActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pop_text="资源"
        app:search_text="请输入资源名称" />


</RelativeLayout>
